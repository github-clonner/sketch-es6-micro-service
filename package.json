{
  "name": "recursive-js",
  "version": "1.0.0",
  "description": "Recursive JavaScript with ES6, destructuring and rest/spread",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm test -- -w",
    "clean": "rm -rf dist",
    "precompile": "npm run clean",
    "compile": "babel ./src -d ./dist --ignore test.js",
    "prepublish": "npm test && npm run compile",
    "test": "mocha --compilers js:babel-core/register --require babel-polyfill ./src/**/*.test.js",
    "test:single": "mocha --compilers js:babel-core/register"
  },
  "author": "Hugo Di Francesco",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.22.0",
    "chai": "^3.5.0",
    "mocha": "^3.1.2"
  },
  "files": [
    "dist"
  ]
}
