{
  "name": "sketch-es6-basic",
  "version": "0.1.0",
  "description": "A well done start module template for es6, npm scripts, mocha test and babel compile.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm test -- -w",
    "clean": "rm -rf dist",
    "precompile": "npm run clean",
    "compile": "babel ./src -d ./dist --ignore test.js",
    "prepublish": "npm test && npm run compile",
    "test": "mocha --compilers js:babel-core/register --require babel-polyfill ./src/**/*.test.js",
    "test:single": "mocha --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "git@git.36node.com:contracts/baaf-service.git"
  },
  "author": "zzswang <zzswang@gmail.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "devDependencies": {
    "babel-cli": "~6.23.0",
    "babel-core": "~6.23.1",
    "babel-polyfill": "~6.23.0",
    "babel-preset-es2015": "~6.22.0",
    "babel-preset-stage-0": "~6.22.0",
    "chai": "~3.5.0",
    "mocha": "~3.2.0"
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/zzswang/sketch-es6-basic/issues"
  },
  "homepage": "https://github.com/zzswang/sketch-es6-basic",
  "keywords": [
    "node",
    "module",
    "es6",
    "mocha",
    "babel"
  ]
}
